#!/bin/sh
# postrm script for fiware-monitoring-ngsi-event-broker

set -e

# actual values of these variables will be replaced after dh_install (see rules)
FIWARE_DIR=#DH_FIWARE_DIR#
BROKER_DIR=#DH_BROKER_DIR#

case "$1" in
purge|remove)
	# remove installation directory
	rm -rf $BROKER_DIR

	# remove FIWARE parent directory (if empty)
	[ -d $FIWARE_DIR ] && rmdir --ignore-fail-on-non-empty $FIWARE_DIR
	;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
